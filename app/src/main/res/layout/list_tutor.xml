<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cont_tutor_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_tutor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/tutor7"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/img_tutor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tutors_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nama tutor"/>

            <TextView
                android:id="@+id/txt_tutors_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat tutor"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_jam"
            android:layout_centerVertical="true"
            android:text="Harga"/>

        <TextView
            android:id="@+id/txt_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=" /Jam" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_400"/>
</LinearLayout>
